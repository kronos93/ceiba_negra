.ajax-button
	display inline-block
	position relative
	.loader-gif
		display: block
		font-size: 0
		color: #fff
		width 60px
		height 20px
		absolute: left 50% top 50%
		transform: translate(-50% , -50%);
		visibility hidden
		&-item
			float left
			width: 10px
			height: 10px
			margin: 4px
			border-radius: 100%
			background #fff
			opacity: 0
			animation: ball-fall 1s ease-in-out infinite
			&:nth-child(1)
				animation-delay:-200ms
			&:nth-child(2)
				animation-delay:-100ms
			&:nth-child(3)
				animation-delay:0ms
	input[disabled]
		color transparent
