@keyframes ajax-balls
	0%
    opacity 0
    transform translateY(-145%)
	10%
	    opacity .5
	20%
	    transform translateY(0)
	80%
	    opacity 1
	    transform translateY(0)
	90%
	    opacity .5
	100%
	    opacity 0
	    transform translateY(145%)