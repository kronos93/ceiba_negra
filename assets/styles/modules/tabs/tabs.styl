.wrapper
	width:100%;
	font-family:sans-serif;
	color:#555;
	font-size:14px;
.tabs 
	li 
		float:left;
		width:50%;
		list-style none
	a
		display:block;
		text-align:center;
		text-decoration:none;
		text-transform:uppercase;
		color:#888;
		padding:5px 0;
		background:#f7f7f7;
		&:hover, &.active 
			background:$primaryColor
			color #fff
		&.active
			border-bottom 2px solid darken($primaryColor,40%)
.tabgroup
	&__item
		border 1px solid #ccc
		border-radius 0px 0px 10px 10px
		padding 6px
		box-sizing border-box
		.form-group
			margin-bottom 0px