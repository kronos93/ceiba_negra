input[type="search"]
	display: block
	width: 100%
	height: 34px
	padding: 6px 12px
	font-size: 14px
	line-height: 1.428571429
	color: #555
	background-color: #fff
	background-image: none
	border: 1px solid #ccc
	border-radius:5px
	&:focus
		outline:none
.checkbox-custom
	input[type="checkbox"]
		display none
		&:checked + label:before
			content: "\2713"
			text-shadow: 1px 1px 1px rgba(0, 0, 0, .2)
			font-size: 15px
			color: $primaryColor
			text-align: center
			line-height: 20px;
	label
		position: relative
		padding-left: 25px
		margin-right: 15px
		font-size: 13px
		vertical-align:middle
		&:before
			content: ""
			display: inline-block
			width: 20px
			height: 20px
			margin-right: 10px
			position: absolute
			left: 0
			bottom: 1px
			background-color: #fff
			border:1px solid #ccc
.radiobutton-custom
	padding 10px 0px
	input[type="radio"]
		display none!important
		&:checked + label:before
			content: "\2022"
			font-size: 30px
			color: $primaryColor
			text-align: center
			line-height: 22px
			border-radius 50%
	label
		position: relative
		padding-left: 25px
		margin-right: 15px
		font-size: 13px
		// vertical-align:middle
		&:before
			content: ""
			display: inline-block
			width: 22px
			height: 22px
			margin-right: 10px
			position: absolute
			left: 0
			bottom: 1px
			background-color: #fff
			border:1px solid #ccc
			border-radius 50%
// Input search
.autocomplete-suggestions
	border 1px solid #999
	background #FFF
	overflow auto
	strong
		font-weight bold
		color #000
.autocomplete-suggestion
	padding 10px 5px
	white-space nowrap
	overflow hidden
.autocomplete-selected
	// background rgba($primaryColor,80%)
	background-color lighten(#ccc,50%)
.autocomplete-group
	padding 5px
	strong
		display block
		border-bottom 1px solid #000