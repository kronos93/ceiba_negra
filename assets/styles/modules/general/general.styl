// Fuente
@font-face
	font-family: 'panama-light'
	src: url('../fonts/Panama-Light.otf') format('opentype')
html
	height:100%
body
	height: 100%
	width:100%
	line-height: 1.3
	letter-spacing: .5px
	font-size: 13px
	background:#f6f5fa
// .mce-tinymce, .mce-container-body, #code_ifr
// 	min-height 100vh!important
h1,h2,h5
	font-family:'panama-light'
strong 
	font-weight: 700
small
	font-size: 70%
iframe
	width:100%
//prefijos tablas
table.table-bordered
	thead
		tr th
			border:none!important
			border-bottom:1px solid #ccc!important
	tbody
		tr
			td
				border:none!important
				border-bottom:1px solid #ccc!important
caption,tr,td
	text-align: left!important
	font-weight: normal!important
	vertical-align: middle!important
p
	margin:0
//prefijos Manzanas y Huertos
span.mz:before
	content 'Mz. '
	display inline-block
span.ht:before
	content 'Ht. '
	display inline-block
.form-group
	label
		position:relative
		&.required:before
			content:'*'
			absolute:top -2px right -9px
			color:$primaryColor
			font-size:18px
+from-width(4,anti-overlap:false)
	.row-equal
		display flex
		align-items flex-end
//estilos generales del main
main.wrap-main
	padding:70px 0px 30px
	min-height 100vh
	.dataTables_wrapper
		padding:10px 0px
	+from-width(600px)
		padding:0px 0px 30px
	+from-width(768px)
		padding:40px 0px 30px
legend
	padding:10px 0px
	line-height:37px
.badge-info
	background rgb(142, 68, 173)
	margin 0px 3px
	vertical-align middle
label.error
	position: absolute;
	bottom: -20px;
	left: 20px;
	color: #ff0000;
	font-size: 12px;