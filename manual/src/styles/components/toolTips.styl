.mapplicManual,.toolTipContainer
	position relative
	display block
	overflow hidden
	+from-width(5)
		overflow initial
.toolTip
	background-color $primaryColor
	display inline-block
	height 30px
	width 30px
	text-align center
	line-height 30px
	border-radius 50%
	box-shadow 1px 1px 4px #000
	position absolute
	&:after
		content attr(data-text)
		position absolute
		background #ccc
		border-radius 5px
		padding 15px
		min-width 13em
		line-height normal
		text-align left
		display none
		z-index 1
	&:hover:after
		display block
	&.search
		top 45px
		left 160px
	&.contador
		top 90px 
		left 170px
	&.controls
		top 340px
		left 220px
	&.cdManzana
		top 40px
		right 0px
	&.huerto
		top 50%
		left 50%
	&.sidebar
		top 180px
		left 0px
	// Toltips de Formulario
	&.steps
		top 0px
		left 0px
	&.buscar-cliente
		top 70px
		right 0px
	&.next-step
		bottom 0px
		right 0px
	&.login_rememeber
		top 70%
		left 30%
	&.login_forgot_pass
		top 70%
		right 30%
	&.table_search
		top 20px
		right 10px
	&.table_mostrar
		top 3%
		left 17%
	&.table_columnas
		top 15%
		left 50%
	&.table_controles
		bottom 0px
		right 20%
	&.table_info
		bottom 10px
		left 10px
.scrollTop
	height 50px
	width 50px
	background-color teal
	border-radius 50%
	fixed bottom 50px right 50px
	display none
	&:after
		content '\f077'
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		font-family FontAwesome
		color #fff
		